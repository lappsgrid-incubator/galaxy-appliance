<?xml version="1.0" encoding="UTF-8"?>
<tool id="opennlp.splitter" name="OpenNLP Sentence Splitter" version="1.0.0">
  <description>OpenNLP sentence splitter</description>
  <command interpreter="lsd">invoke.lsd Splitter $input $output</command>
  <inputs>
    <param name="input" type="data" format="lif" label="Input"/>
  </inputs>
  <outputs>
    <data name="output" format="lif" label="Sentences"/>
  </outputs>
  <help>Adds sentence boundaries to tokenized text in a LIF container.</help>
</tool>
